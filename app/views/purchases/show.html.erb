<!-- error message -->
<% if notice != nil %>
<div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>
    <%= notice %>
</div>
<% end %>
<!-- end error message -->
<!-- body -->
<%= form_for(@purchase) do |purchase| %>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Datos</h3>
            </div>
            <div class="panel-body">
              <p>
                <strong>Factura:</strong>
                <%= @purchase.factura %>
              </p>

              <p>
                <strong>Proveedor:</strong>
                <% if @purchase.provider !=nil %>
                <%= @purchase.provider.nombre %>
                <% else %>
                Eliminado
                <% end %>
              </p>

              <p>
                <strong>Fecha:</strong>
                <%= @purchase.fecha %>
              </p>

              <p>
                <strong>Total:</strong>
                <%= @purchase.total %>
              </p>

            </div>
            <div class="panel-footer">
                <%= link_to 'Editar', edit_purchase_path(@purchase), class:"btn btn-default pull-left" %>
                <button type="button" class="btn btn-primary pull-right mb-control" data-box="#message-box-danger">Eliminar</button>
                <%= link_to 'Volver', purchases_path, class:"btn btn-default pull-left" %>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="table-responsive">
            <table class="table datatable">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>subtotal</th>
                    </tr>
                </thead>

                <tbody>
                  <% @purchase.summaries.each do |summary| %>
                    <tr>
                        <td><%= summary.product.nombre %></td>
                        <td><%= summary.cantidad %></td>
                        <td><%= summary.precio %></td>
                        <td><%= summary.subtotal %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- end body -->
<!-- footer -->

<!-- end foooter -->
<!-- danger -->
<div class="message-box message-box-danger animated fadeIn" id="message-box-danger">
    <div class="mb-container">
        <div class="mb-middle">
            <div class="mb-title">
                <span class="fa fa-times"></span>
                Peligro</div>
            <div class="mb-content">
                <p>Â¿Esta seguro de continuar con la eliminacion del registro?</p>
            </div>
            <div class="mb-footer">
                <%= link_to 'Eliminar', @purchase, method: :delete, class:"btn btn-default btn-lg pull-right"%>
                <button class="btn btn-default btn-lg pull-left mb-control-close">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- end danger -->
<% end %>

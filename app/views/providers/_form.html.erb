<!-- error message -->
<%= form_for(@provider) do |f| %>
<% if @provider.errors.any? %>
<div class="alert alert-danger" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>
    <strong>!Error!</strong>
    No se pudo guardar en la base de datos.
</div>
<% @provider.errors.full_messages.each do |message| %>
<div class="alert alert-warning" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>
    <strong>¡Advertencia!</strong>
    <%= message %>
</div>

<% end %>

<% end %>
<!-- end error message -->

<!-- form format body -->
<div class="panel-body">
    <div class="row">

        <div class="col-md-6">

            <div class="form-group">
                <%= f.label :rut, class:"col-md-3 control-label"%>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="fa fa-pencil"></span>
                        </span>
                        <%= f.text_field :rut, class:"form-control"%>
                    </div>
                    <span class="help-block">Rut del proveedor</span>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :nombre, class:"col-md-3 control-label"%>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="fa fa-pencil"></span>
                        </span>
                        <%= f.text_area :nombre, class:"form-control"%>
                    </div>
                    <span class="help-block">Nombre completo del proveedor</span>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :direccion, class:"col-md-3 control-label"%>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="fa fa-pencil"></span>
                        </span>
                        <%= f.text_field :direccion, class:"form-control"%>
                    </div>
                    <span class="help-block">Direccion del proveedor</span>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :numero, class:"col-md-3 control-label"%>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="fa fa-pencil"></span>
                        </span>
                        <%= f.number_field :numero, class:"form-control"%>
                    </div>
                    <span class="help-block">Numero de la direccion</span>
                </div>
            </div>

        </div>
        <div class="col-md-6">

            <div class="form-group">
                <%= f.label :email, class:"col-md-3 control-label"%>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="fa fa-pencil"></span>
                        </span>
                        <%= f.text_field :email, class:"form-control"%>
                    </div>
                    <span class="help-block">Email del Proveedor</span>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :telefono, class:"col-md-3 control-label"%>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="fa fa-pencil"></span>
                        </span>
                        <%= f.number_field :telefono, class:"form-control"%>
                    </div>
                    <span class="help-block">Numero telefonico del proveedor</span>
                </div>
            </div>
            <div class="form-group">
                <%= f.label "Ciudad", class:"col-md-3 control-label"%>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="fa fa-pencil"></span>
                        </span>
                        <%= collection_select :provider, :city_id, City.all, :id, :nombre, {prompt: "selecciona una ciudad"}, {class: "form-control select", "data-live-search" => "true"} %>
                    </div>
                    <span class="help-block">Ciudad del proveedor</span>
                </div>
            </div>

        </div>
      </div >

            <button type="button" class="btn btn-primary pull-right mb-control" data-box="#message-box-info">Confirmar</button>

            <!-- form format body -->

            <!-- info meddage -->
            <div class="message-box message-box-info animated fadeIn" id="message-box-info">
                <div class="mb-container">
                    <div class="mb-middle">
                        <div class="mb-title">
                            <span class="fa fa-info"></span>
                            Informacion</div>
                        <div class="mb-content">
                            <p>¿Estas seguro de continuar?</p>
                        </div>
                        <div class="mb-footer">
                            <%= f.submit class:"btn btn-default btn-lg pull-right "%>
                            <button class="btn btn-default btn-lg pull-left mb-control-close">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end info message -->
            <% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Trips</h1>

<table>
  <thead>
    <tr>
      <th>Salida</th>
      <th>Real</th>
      <th>Estimada</th>
      <th>Motivo</th>
      <th>Ship</th>
      <th>Purchase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.salida %></td>
        <td><%= trip.real %></td>
        <td><%= trip.estimada %></td>
        <td><%= trip.motivo %></td>
        <td><%= trip.ship %></td>
        <td><%= trip.purchase %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<!-- error message -->
<% if notice != nil %>
<div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>
    <%= notice %>
</div>
<% end %>
<!-- end error message -->
<!-- body -->
<%= form_for(@client) do |client| %>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Datos</h3>
            </div>
            <div class="panel-body">
              <p>
                <strong>Rut:</strong>
                <%= @client.rut %>
              </p>

              <p>
                <strong>Nombre:</strong>
                <%= @client.nombre %>
              </p>

              <p>
                <strong>Telefono:</strong>
                <%= @client.telefono %>
              </p>

              <p>
                <strong>Direccion:</strong>
                <%= @client.direccion %>
              </p>

              <p>
                <strong>Numero:</strong>
                <%= @client.numero %>
              </p>

              <p>
                <strong>Ciudad:</strong>
                <%= @client.city.nombre %>
              </p>

              <p>
                <strong>Email:</strong>
                <%= @client.email %>
              </p>
            </div>
            <div class="panel-footer">
                <%= link_to 'Editar', edit_client_path(@client), class:"btn btn-default pull-left" %>
                <button type="button" class="btn btn-primary pull-right mb-control" data-box="#message-box-warning">Eliminar</button>
                <%= link_to 'Volver', clients_path, class:"btn btn-default pull-left" %>
            </div>
        </div>
    </div>
    <div class="col-md-8">
      <div class="table-responsive">
          <table class="table datatable">
              <thead>
                  <tr>
                      <th>Factura</th>
                      <th>Total</th>
                      <th>Fecha</th>
                  </tr>
              </thead>

              <tbody>
                  <% @client.sales.each do |find| %>
                  <tr>
                      <td><%= link_to find.factura, find %></td>
                      <td><%= find.total %></td>
                      <td><%= find.fecha %></td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
</div>
<!-- end body -->
<!-- warning -->
        <div class="message-box message-box-warning animated fadeIn" id="message-box-warning">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-warning"></span> Atención</div>
                    <div class="mb-content">
                      <p>¿Está seguro de eliminar el registro? todas las ventas realizadas a este cliente serán eliminadas.</p>
                    </div>
                    <div class="mb-footer">
                        <button class="btn btn-default btn-lg pull-left mb-control-close">Cerrar</button>
                        <button class="btn btn-default btn-lg pull-right mb-control mb-control-close" data-box="#message-box-danger">Continuar</button>
                    </div>
                </div>
            </div>
        </div>
<!-- end warning -->
<!-- danger -->
<div class="message-box message-box-danger animated fadeIn" id="message-box-danger">
    <div class="mb-container">
        <div class="mb-middle">
            <div class="mb-title">
                <span class="fa fa-times"></span>
                Peligro</div>
            <div class="mb-content">
                <p>¿Está seguro de continuar con la eliminación del registro? todos los datos serán borrados de forma permanente.</p>
            </div>
            <div class="mb-footer">
                <%= link_to 'Eliminar', @client, method: :delete, class:"btn btn-default btn-lg pull-right"%>
                <button class="btn btn-default btn-lg pull-left mb-control-close">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- end danger -->
<% end %>
